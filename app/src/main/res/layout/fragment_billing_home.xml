<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor"
    tools:context=".fragments.BillingHomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:paddingBottom="0dp"
        app:cardBackgroundColor="?attr/backgroundColor"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtPa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Payment Detail"
                android:textColor="?attr/colorSecondary"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/liLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPa"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserratsemibold"

                        android:text="Charges"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/txtCharges"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Rs: 1000"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"

                    android:alpha="0.7"
                    app:cardBackgroundColor="?attr/colorSecondary"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Due Date"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="21/10/2021"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:alpha="0.7"
                    app:cardBackgroundColor="?attr/colorSecondary"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Status"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Unpaid"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView6"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3"
        tools:layout_editor_absoluteX="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Select Payment Methods"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="8"
                android:gravity="center"
                android:layout_below="@id/title"
                android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMaster"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="5dp">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mastercard" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEasyPaisa"
                android:layout_width="0dp"
                android:layout_height="80dp"
              android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                    android:layout_width="30dp"
                    android:padding="0dp"
                    android:id="@+id/easyPasiaCheckBox"
                    android:layout_alignParentEnd="true"
                    android:layout_height="30dp"/>

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:src="@drawable/easypaisa" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardJazz"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:layout_below="@id/title"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/cardEasyPaisa"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="30dp"
                        android:padding="0dp"
                        android:id="@+id/JazzCheckBox"
                        android:layout_alignParentEnd="true"
                        android:layout_height="30dp"/>

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/jazzcash" />

</RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHuaweiIAP"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_width="30dp"
                        android:padding="0dp"
                        android:id="@+id/HuaweiCheckBox"
                        android:layout_alignParentEnd="true"
                        android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/huawei" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPayBills"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"

        android:text="@string/pay_bill_now"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="?attr/colorSecondary"
       app:shapeAppearanceOverlay="@style/buttonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView6"
        app:layout_constraintVertical_bias="0.165" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:src="@drawable/sercurepayment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>